<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="SplashTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="SwitchStyle" parent="AppTheme">
        <item name="android:colorControlActivated">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SeekBarStyle" parent="@style/Widget.AppCompat.SeekBar.Discrete">
        <item name="android:colorAccent">@color/accent</item>
    </style>

    <style name="TextEditStyle" parent="AppTheme">
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="CheckBoxStyle" parent="AppTheme">
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="ActionBarStyle" parent="android:Widget.Material.Light.ActionBar">
        <item name="android:background">@color/primary</item>
        <item name="android:titleTextStyle">@style/ActionBarStyle.TitleText</item>
    </style>

    <style name="ActionBarStyle.TitleText" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@color/icons</item>
    </style>

</resources>
